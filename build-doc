#!/usr/bin/env nix-shell
#!nix-shell -i /bin/bash -p pandoc pandoc-plantuml-filter plantuml texlive.combined.scheme-context

find "$(dirname "$0")/docs/handout" -type f -print0 | \
  sort -z | \
  xargs -0 -n 1 cat | \
  pandoc \
    --standalone \
    --pdf-engine context \
    --from markdown+grid_tables \
    --filter pandoc-plantuml \
    "$@"
